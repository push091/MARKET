#!perl

use strict;
use warnings;
# PODNAME: moo-outdated

use Getopt::Long;
use Moo::Conflicts;

my $verbose;
GetOptions( 'verbose|v' => \$verbose );

if ($verbose) {
    Moo::Conflicts->check_conflicts;
}
else {
    my @conflicts = Moo::Conflicts->calculate_conflicts;
    print "$_\n" for map { $_->{package} } @conflicts;
    exit @conflicts;
}

